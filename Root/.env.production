# Production Environment Configuration
NODE_ENV=production
PORT=5000

# Database URLs
MONGODB_URI=mongodb+srv://production-cluster/satyashield
REDIS_URI=redis://production-redis:6379

# Authentication & Security
JWT_SECRET=super-secret-production-key-2025
JWT_REFRESH_SECRET=super-secret-refresh-key-2025
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# API Keys - External Services
SEBI_API_URL=https://www.sebi.gov.in/api/v1
SEBI_API_KEY=live_sebi_key_2025
NSE_API_URL=https://www.nseindia.com/api
BSE_API_URL=https://api.bseindia.com

# AI Engine Configuration
AI_ENGINE_URL=https://ai.satyashield.com
AI_ENGINE_API_KEY=production_ai_key_2025
MODEL_VERSION=v2.1.0

# Email & SMS Services
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@satyashield.com
SMTP_PASS=app-specific-password
SMS_PROVIDER_API_KEY=sms_provider_key

# File Upload & Storage
MAX_FILE_SIZE=100MB
AWS_S3_BUCKET=satyashield-uploads
AWS_ACCESS_KEY_ID=production_aws_key
AWS_SECRET_ACCESS_KEY=production_aws_secret

# Security & Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://satyashield.com

# Monitoring & Logging
LOG_LEVEL=info
SENTRY_DSN=https://sentry.io/projects/satyashield
NEW_RELIC_LICENSE_KEY=newrelic_key

# WebSocket Configuration
WEBSOCKET_PORT=8080
ENABLE_WEBSOCKETS=true

# Cache Configuration
REDIS_CACHE_TTL=3600
ENABLE_CACHING=true

# External Integrations
TELEGRAM_BOT_TOKEN=telegram_bot_token
WHATSAPP_API_KEY=whatsapp_api_key
TWITTER_API_KEY=twitter_api_key
TWITTER_API_SECRET=twitter_api_secret

# Compliance & Audit
AUDIT_LOG_ENABLED=true
GDPR_COMPLIANCE=true
SEBI_COMPLIANCE_MODE=strict

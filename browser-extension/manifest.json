{
  "manifest_version": 3,
  "name": "SatyaShield - Fraud Detection",
  "description": "Real-time fraud detection for securities market websites",
  "version": "1.0.0",
  "minimum_chrome_version": "88",
  
  "icons": {
    "16": "assets/icon16.png",
    "32": "assets/icon32.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  
  "action": {
    "default_popup": "popup/popup.html",
    "default_title": "SatyaShield",
    "default_icon": {
      "16": "assets/icon16.png",
      "32": "assets/icon32.png"
    }
  },
  
  "background": {
    "service_worker": "background/background.js",
    "type": "module"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content/content.js"],
      "css": ["content/content.css"],
      "run_at": "document_start"
    }
  ],
  
  "permissions": [
    "activeTab",
    "storage",
    "alarms",
    "notifications",
    "tabs",
    "scripting"
  ],
  
  "host_permissions": [
    "https://www.sebi.gov.in/*",
    "https://www.nseindia.com/*",
    "https://www.bseindia.com/*",
    "https://api.satyashield.com/*",
    "*://*/*"
  ],
  
  "web_accessible_resources": [
    {
      "resources": [
        "assets/*",
        "popup/*",
        "content/overlay.html"
      ],
      "matches": ["<all_urls>"]
    }
  ],
  
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'; connect-src 'self' https://api.satyashield.com wss://api.satyashield.com;"
  },
  
  "commands": {
    "quick_scan": {
      "suggested_key": {
        "default": "Ctrl+Shift+S",
        "mac": "Command+Shift+S"
      },
      "description": "Quick fraud scan of current page"
    },
    "toggle_protection": {
      "suggested_key": {
        "default": "Ctrl+Shift+P",
        "mac": "Command+Shift+P"
      },
      "description": "Toggle fraud protection"
    }
  }
}

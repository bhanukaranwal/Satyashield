NODE_ENV=production
PORT=5000

# Database Configuration
MONGODB_URI=mongodb+srv://production-cluster.abc123.mongodb.net/satyashield
REDIS_URI=redis://production-redis-cluster:6379

# Authentication & Security
JWT_SECRET=super-secret-production-key-2025-satyashield
JWT_REFRESH_SECRET=refresh-secret-production-2025
JWT_EXPIRE=15m
JWT_REFRESH_EXPIRE=7d

# External APIs
AI_ENGINE_URL=https://ai.satyashield.com
AI_ENGINE_API_KEY=production-ai-engine-key-2025
SEBI_API_URL=https://www.sebi.gov.in/api/v1
SEBI_API_KEY=production-sebi-api-key
NSE_API_URL=https://www.nseindia.com/api
BSE_API_URL=https://api.bseindia.com

# File Upload & Storage
MAX_FILE_SIZE=100MB
UPLOAD_PATH=/app/uploads
AWS_S3_BUCKET=satyashield-production-uploads
AWS_ACCESS_KEY_ID=production-aws-access-key
AWS_SECRET_ACCESS_KEY=production-aws-secret-key

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=alerts@satyashield.com
SMTP_PASS=production-email-app-password

# Security & Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=https://satyashield.com,https://app.satyashield.com

# Monitoring & Logging
LOG_LEVEL=info
ENABLE_MONITORING=true
PROMETHEUS_PORT=9090
SENTRY_DSN=https://abc123@o123.ingest.sentry.io/456789
NEW_RELIC_LICENSE_KEY=production-newrelic-license

# WebSocket Configuration
WEBSOCKET_PORT=8080
ENABLE_WEBSOCKETS=true

# Cache Configuration
REDIS_CACHE_TTL=3600
ENABLE_CACHING=true

# Compliance & Audit
AUDIT_LOG_ENABLED=true
GDPR_COMPLIANCE=true
SEBI_COMPLIANCE_MODE=strict

NODE_ENV=development
PORT=5000

# Database Configuration
MONGODB_URI=mongodb://localhost:27017/satyashield_dev
REDIS_URI=redis://localhost:6379

# Authentication & Security
JWT_SECRET=development-secret-key-2025
JWT_REFRESH_SECRET=development-refresh-secret
JWT_EXPIRE=1h
JWT_REFRESH_EXPIRE=7d

# External APIs
AI_ENGINE_URL=http://localhost:8000
AI_ENGINE_API_KEY=development-ai-key
SEBI_API_URL=https://www.sebi.gov.in/api/v1
SEBI_API_KEY=development-sebi-key
NSE_API_URL=https://www.nseindia.com/api
BSE_API_URL=https://api.bseindia.com

# File Upload & Storage
MAX_FILE_SIZE=100MB
UPLOAD_PATH=./uploads
AWS_S3_BUCKET=satyashield-dev-uploads
AWS_ACCESS_KEY_ID=dev-aws-key
AWS_SECRET_ACCESS_KEY=dev-aws-secret

# Email Configuration
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=dev@satyashield.com
SMTP_PASS=dev-email-password

# Security & Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=200
CORS_ORIGIN=http://localhost:3000,http://localhost:8080

# Monitoring & Logging
LOG_LEVEL=debug
ENABLE_MONITORING=true
PROMETHEUS_PORT=9090

# WebSocket Configuration
WEBSOCKET_PORT=8080
ENABLE_WEBSOCKETS=true

# Cache Configuration
REDIS_CACHE_TTL=1800
ENABLE_CACHING=true

# Development Settings
DEBUG_MODE=true
MOCK_EXTERNAL_APIS=false
